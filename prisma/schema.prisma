generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  firstName    String
  lastName     String
  profileImage String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id          String        @id @default(cuid())
  name        String
  description String
  status      ProductStatus
  images      String[]
  category    Category
  price       Float
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  isFeatured  Boolean       @default(false)
}

enum Category {
  men
  women
  kids
}

enum ProductStatus {
  draft
  published
}
